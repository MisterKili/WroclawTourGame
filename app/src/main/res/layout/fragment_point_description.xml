<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PointDescriptionFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/pointDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="25dp"
            android:text="TextView"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/goToQuestionImageView"
            android:layout_width="89dp"
            android:layout_height="57dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/arrow"
            app:layout_constraintEnd_toEndOf="@+id/pointDescriptionTextView"
            app:layout_constraintTop_toBottomOf="@+id/pointDescriptionTextView" />

        <TextView
            android:id="@+id/goToQuestiontextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/go_to_question"
            app:layout_constraintStart_toStartOf="@+id/goToQuestionImageView"
            app:layout_constraintTop_toBottomOf="@+id/goToQuestionImageView" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>